<div class='container'>
    <div class='row'>
        <div class='col-md-12'>
            <h2>Results</h2>

            <table class="table table-hover table-inverse">
                <% if @range == "User" %>
                <p>Users search for "<%= @word %>"</p>
                    <thead>
                        <tr>
                            <th></th>
                            <th><p>name</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @user.each do |user| %>
                        <tr>
                            <td><%= attachment_image_tag(user, :profile_image, :fill, 100,100, fallback: "no_image.jpg" )%></td>
                            <td><%= link_to user.name, user_path(user) %></td>
                        </tr>
                        <% end %>
                    </tbody>
                <% else %>
                <p>Books search for "<%= @word %>"</p>
                    <thead>
                        <tr>
                            <th></th>
                            <th><p>Title</p></th>
                            <th><p>Opinion</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @book.each do |book| %>
                            <tr>
                                <td><%= attachment_image_tag(book.user, :profile_image, :fill, 100,100, fallback: "no_image.jpg" )%></td>
                                <td><%= link_to book.title, book_path(book) %></td>
                                <td><%= book.body %></td>
                            </tr>
                        <% end %>
                    </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>
