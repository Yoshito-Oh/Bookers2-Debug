<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <!--「user: @user」を追記。引数の記載がなかった-->
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td>
  		      <%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>

          <% if @user.id == current_user.id %>
          <!--27. 投稿したユーザーとログインユーザが一致していたらー-->
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td>
            <p>
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
            </p>
          </td>
          <% else %>
          <td class="favorite-btn">
            <%= render 'favorite/favorite-btn', book: @book %>
          </td>
          <td>
            コメント数:<%= @book.book_comments.count %>
          </td>
          <% end %>

        </tr>
      </table>
      <table class="Comment-list">
        <% @book.book_comments.each do |book_comment| %>
          <!--@book=本のID。book_comments：モデル, each:並べる-->
        <tr><!--投稿したコメントを表示するテーブル-->

          <td>
            <%= link_to user_path(book_comment.user) do %><!--投稿したユーザーのプロフィール画像のリンク、下は画像-->
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
            <%= book_comment.user.name %><!--投稿したユーザーネーム-->
            <% end %>
          </td>
          <td>
            <%= book_comment.comment %><!--投稿したコメントの内容-->
          </td>
          <td>
            <% if book_comment.user == current_user %>
              <!--27. 投稿したユーザーとログインユーザが一致していたらー-->
              <%= link_to 'Destroy', book_book_comment_path(@book, book_comment), method: :delete , class: 'btn btn-danger'%>
              <!--コメント消去　　※コメントのpathが「book_book_comment」のため-->
              <!--旧：(@book)　⇒　(book_comment.book, book_comment)と記載する。（引数が2つのため）-->
            <% end %>
          </td>
          <br />
        </tr>
        <% end %>
      </table>
      <div class="Comment-form"><!--コメント投稿フォーム-->
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows: '5', :size => "90x5" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>