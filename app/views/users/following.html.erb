<h2>Follow User</h2>
<% if @users.blank? %><!--フォローしているユーザがいなければ-->
  <p>ユーザはいません</p>
<% else %><!--そうでなければ-->
  <table width="100%">
    <!--table width="○○%"で幅の指定ができ、tableの幅割合を<th width="○○%">で指定する。
        また"○○px"と記載すれば、ピクセル数を固定できる-->
    <thead>
      <tr>
        <th width="20%">image</th>
        <th width="20%">name</th>
        <th colspan="3", width="60%"></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 100,100, fallback: "no_image.jpg" )%></td>
        <td><%= user.name %></td>
        <td><p>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <td><%= link_to "Show", user_path %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
<% end %>

